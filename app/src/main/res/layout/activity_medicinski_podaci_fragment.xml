<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#efefef"
    android:padding="10dp"
    >
    <TextView
        android:layout_marginTop="30dp"
        android:textColor="#A22022"
        android:layout_width="wrap_content"
        android:text="Povijest Bolesti"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/tvbolesti"/>
    <TextView
        android:textColor="#434343"
        android:id="@+id/etbolesti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvbolesti"/>
    <TextView
        android:id="@+id/tvlaboratorijski"
        android:textColor="#A22022"
        android:layout_width="wrap_content"
        android:text="Laboratorijski podaci"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/etbolesti"/>
    <TextView
        android:textColor="#434343"
        android:id="@+id/etlaboratorijski"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvlaboratorijski"
        />
    <Button
        android:background="#A22022"
        android:textColor="@android:color/background_light"
        android:id="@+id/bUredi"
        android:text="Uredi medicinske podatke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
