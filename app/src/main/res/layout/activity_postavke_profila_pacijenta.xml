<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable name="pacijent" type="com.example.deean.medix.pacijentovo.konstruktor_i_baza.Pacijent"/>
    </data>
    <LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#efefef">

    <android.support.v7.widget.Toolbar
        android:padding="0dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#A22022"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#efefef"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:id="@+id/fragment_container"
        >

        <EditText
            android:hint="Ime"
            android:text="@{pacijent.ime}"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etIme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            />
        <EditText
            android:hint="Prezime"
            android:text="@{pacijent.prezime}"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etPrezime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/etIme"
            android:layout_marginBottom="10dp"
            android:maxLines="1"

            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivRadno_vrijeme"
            android:src="@drawable/spol"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/etPrezime"
            />
        <Spinner
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#434343"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/etPrezime"
            android:layout_alignParentStart="true" />

        <EditText
            android:hint="Adresa"
            android:text="@{pacijent.adresa}"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etAdresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/spinner"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivAdresa"
            android:src="@drawable/location"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/spinner"
            />
        <EditText
            android:inputType="number"
            android:hint="Telefon"
            android:text="@{pacijent.telefon}"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etTelefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/etAdresa"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivTelefon"
            android:src="@drawable/phone"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/etAdresa"
            />
        <EditText
            android:inputType="number"
            android:hint="Mobitel"
            android:text="@{pacijent.mobitel}"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etMobitel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/etTelefon"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivMobitel"
            android:src="@drawable/mobile"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/etTelefon"
            />
        />
        <Button
            android:layout_alignParentBottom="true"
            android:background="#A22022"
            android:textColor="@android:color/background_light"
            android:id="@+id/azurirajPodatke"
            android:text="AÅ¾uriraj podatke"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        />
    </RelativeLayout>
</LinearLayout>
</layout>
