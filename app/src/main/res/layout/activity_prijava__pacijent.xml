<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#efefef">

    <android.support.v7.widget.Toolbar
        android:padding="0dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#A22022"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <RelativeLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#efefef">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivPacijent"
            android:src="@drawable/patient_red"
            android:layout_gravity="left"
            android:layout_marginBottom="20dp"
            />
    <TextView
        android:layout_marginTop="30dp"
        android:textColor="#A22022"
        android:layout_width="wrap_content"
        android:text="Ime i Prezime"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivPacijent"
        android:id="@+id/tvImePrezime"/>
    <TextView
        android:textColor="#434343"
        android:id="@+id/etIme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivPacijent"
        android:layout_below="@id/tvImePrezime"/>
    <TextView
        android:textColor="#434343"
        android:id="@+id/etPrezime"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivPacijent"
        android:layout_below="@id/etIme"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivSpol"
        android:src="@drawable/spol"
        android:layout_gravity="left"
        android:layout_below="@id/ivPacijent"
        />
    <TextView
        android:id="@+id/tvSpol"
        android:textColor="#A22022"
        android:layout_width="wrap_content"
        android:text="Spol"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/ivSpol"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPacijent"/>
    <TextView
        android:textColor="#434343"
        android:id="@+id/etSpol"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSpol"
        android:layout_toEndOf="@+id/ivSpol"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivAdresa"
        android:src="@drawable/location"
        android:layout_gravity="left"
        android:layout_below="@id/etSpol"
        />
    <TextView
        android:id="@+id/tvAdresa"
        android:textColor="#A22022"
        android:layout_width="wrap_content"
        android:text="PrebivaliÅ¡te"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSpol"
        android:layout_toEndOf="@+id/ivAdresa"
        />
    <TextView
        android:textColor="#434343"
        android:id="@+id/etAdresa"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAdresa"
        android:layout_toEndOf="@+id/ivAdresa"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivOIB"
        android:src="@drawable/oib"
        android:layout_gravity="left"
        android:layout_below="@id/etAdresa"
        />
    <TextView
        android:id="@+id/tvOIB"
        android:textColor="#A22022"
        android:layout_width="wrap_content"
        android:text="OIB"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAdresa"
        android:layout_toEndOf="@+id/ivOIB"/>
    <TextView
        android:textColor="#434343"
        android:id="@+id/etOIB"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvOIB"
        android:layout_toEndOf="@+id/ivOIB"/>
    />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivTelefon"
        android:src="@drawable/phone"
        android:layout_gravity="left"
        android:layout_below="@id/etOIB"
        />
    <TextView
        android:id="@+id/tvTelefon"
        android:textColor="#A22022"
        android:layout_width="wrap_content"
        android:text="Telefon"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/etOIB"
        android:layout_toEndOf="@+id/ivTelefon"/>
    <TextView
        android:textColor="#434343"
        android:id="@+id/etTelefon"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTelefon"
        android:layout_toEndOf="@+id/ivTelefon"/>
    />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivMobitel"
        android:src="@drawable/mobile"
        android:layout_gravity="left"
        android:layout_below="@id/etTelefon"
        />
    <TextView
        android:id="@+id/tvMobitel"
        android:textColor="#A22022"
        android:layout_width="wrap_content"
        android:text="Mobitel"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTelefon"
        android:layout_toEndOf="@+id/ivMobitel"/>
    <TextView
        android:textColor="#434343"
        android:id="@+id/etMobitel"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMobitel"
        android:layout_toEndOf="@+id/ivMobitel"/>
    />

    </RelativeLayout>


</LinearLayout>
