<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#efefef"
    >

    <android.support.v7.widget.Toolbar
        android:padding="0dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#A22022"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#efefef"
        android:padding="10dp"
        android:id="@+id/fragment_container"
        >
    <ImageView
        android:id="@+id/slika"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/logo1"/>
    <TextView
        android:layout_below="@+id/slika"
        android:id="@+id/tvemtext"
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Email"
        android:layout_height="wrap_content" />
    <EditText
        android:singleLine="true"
        android:layout_below="@id/tvemtext"
        android:theme="@style/Boja_EditText"
        android:textColor="#434343"
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvloztext"
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Lozinka"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"/>
    <EditText
        android:singleLine="true"
        android:layout_below="@+id/tvloztext"
        android:theme="@style/Boja_EditText"
        android:textColor="#434343"
        android:id="@+id/etLozinka"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/etLozinka"
        android:layout_marginBottom="10dp"
        android:textColor="#434343"
        android:id="@+id/tvRegistracijaLink"
        android:layout_width="wrap_content"
        android:text="Registiriraj se ovdje"
        android:textStyle="bold"
        android:layout_marginLeft="109dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_below="@+id/tvRegistracijaLink"
        android:layout_marginBottom="10dp"
        android:textColor="#434343"
        android:id="@+id/tvLozinkaLink"
        android:layout_width="wrap_content"
        android:text="Zaboravili ste lozinku?"
        android:textStyle="bold"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content" />
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SpinKitView.ThreeBounce"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            app:SpinKit_Color="@color/buttonColor"/>
    <Button
        android:background="#A22022"
        android:textColor="@android:color/background_light"
        android:id="@+id/bPrijava"
        android:text="Prijava"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
