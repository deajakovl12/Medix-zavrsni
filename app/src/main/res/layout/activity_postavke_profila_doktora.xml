<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#efefef">

    <android.support.v7.widget.Toolbar
        android:padding="0dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#A22022"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#efefef"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:id="@+id/fragment_container"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivRadno_vrijeme"
            android:src="@drawable/radno_vrijeme"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/spinner"
            />

        <EditText
            android:hint="Ime"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etIme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:textSize="13dp"
            android:maxLines="1"
            />
        <EditText
            android:hint="Prezime"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etPrezime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/etIme"
            android:textSize="13dp"
            android:maxLines="1"

            />
        <EditText
            android:hint="Titula"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etTitula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/etPrezime"
            android:textSize="13dp"
            android:maxLines="1"

            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivSpol"
            android:src="@drawable/spol"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/etTitula"
            />
        <Spinner
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#434343"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/etTitula"
            android:layout_alignParentStart="true" />
        <EditText
            android:hint="Radno vrijeme"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etRadnoVrijeme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/spinner"
            android:textSize="13dp"
            android:maxLines="5"
            android:inputType="textMultiLine"
            />
        <EditText
            android:hint="Radno vrijeme savjetovališta"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etRadSavjetovalista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/etRadnoVrijeme"
            android:textSize="13dp"
            android:maxLines="4"
            android:inputType="textMultiLine"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivRad_Savjetovalista"
            android:src="@drawable/savjet"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/etRadnoVrijeme"
            />
        <EditText
            android:hint="Adresa"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etAdresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/etRadSavjetovalista"
            android:textSize="13dp"
            android:maxLines="1"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivAdresa"
            android:src="@drawable/location"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/etRadSavjetovalista"
            />
        <EditText
            android:inputType="number"
            android:hint="Telefon"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etTelefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/etAdresa"
            android:textSize="13dp"
            android:maxLines="1"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivTelefon"
            android:src="@drawable/phone"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/etAdresa"
            />
        <EditText
            android:inputType="number"
            android:hint="Mobitel"
            android:textColor="#434343"
            android:theme="@style/Boja_EditText"
            android:id="@+id/etMobitel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivRadno_vrijeme"
            android:layout_below="@+id/etTelefon"
            android:textSize="13dp"
            android:maxLines="1"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivMobitel"
            android:src="@drawable/mobile"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/etTelefon"
            />
        />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SpinKitView.ThreeBounce"
            android:layout_below="@id/etMobitel"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            app:SpinKit_Color="@color/buttonColor"/>
        <Button
            android:layout_below="@id/etMobitel"
            android:background="#A22022"
            android:textColor="@android:color/background_light"
            android:id="@+id/azurirajPodatke"
            android:text="Ažuriraj podatke"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        />
    </RelativeLayout>
</LinearLayout>
