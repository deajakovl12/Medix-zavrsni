<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#efefef"
    android:orientation="vertical"

    >

    <android.support.v7.widget.Toolbar
        android:padding="0dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#A22022"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <LinearLayout
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >


        <TextView
            android:layout_marginTop="10dp"
            android:text="Što znaći '+' u nekim djelovima aplikacije?"
            android:textColor="#434343"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
        </TextView>
        <TextView
            android:text="+"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvPlus"
            android:textColor="#434343"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
        </TextView>
        <TextView
            android:text="Što su to postavke profila i kako ih izmijeniti?"
            android:textColor="#434343"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            >
        </TextView>
        <TextView
            android:text="Postavke"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/tvPostavke"
            android:textColor="#434343"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
        </TextView>
        <TextView
            android:layout_marginBottom="20dp"
            android:text="Kako doktor može filtrirati preglede?"
            android:textColor="#434343"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
        </TextView>
        <TextView
            android:text="Pregledi"
            android:layout_marginLeft="20dp"
            android:id="@+id/tvPregled"
            android:textColor="#434343"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="20dp">
        </TextView>
    <TextView
        android:layout_marginBottom="20dp"
        android:text="Kako obnoviti lozinku?"
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
    </TextView>
    <TextView
        android:text="Lozinka"
        android:layout_marginLeft="20dp"
        android:id="@+id/tvLozinka"
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
    </TextView>
    </LinearLayout>
</LinearLayout>